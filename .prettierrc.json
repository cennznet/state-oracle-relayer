{
  "printWidth": 80,
  "semi": true,
  "useTabs": true,
  "singleQuote": false,
  "jsxSingleQuote": false,
  "quoteProps": "consistent",
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "overrides": [
    {
      "files": [
        "*.yml",
        "*.yaml",
        "*.json",
        ".eslintrc",
        ".prettierrc",
        "*.prisma"
      ],
      "options": {
        "useTabs": false,
        "tabWidth": 2
      }
    }
  ]
}
